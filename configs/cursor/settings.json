{
  "editor.fontSize": 14,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 110,
  "editor.cursorBlinking": "smooth",
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "boundary",
  "editor.smoothScrolling": true,
  "editor.stickyScroll.enabled": true,
  "editor.guides.bracketPairs": "active",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.autoSave": "onFocusChange",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "search.mode": "reuseEditor",
  "search.searchEditor.focusResultsOnSearch": true,
  "search.searchOnType": false,
  "editor.inlineSuggest.enabled": true,
  "cursor.cpp.showTabAutocomplete": true,
  "cursor.cpp.showIdleCompletions": true,
  "cursor.cpp.completionDelay": 80,
  "cursor.cpp.disabledLanguages": [
    "yaml",
    "markdown",
    "scminput"
  ],
  "typescript.tsserver.maxTsServerMemory": 4096,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.jsxAttributeCompletionStyle": "auto",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.includeLanguages": {
    "typescriptreact": "html",
    "javascriptreact": "html"
  },
  "python.defaultInterpreterPath": "./.venv/bin/python",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.terminal.activateEnvironment": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit",
      "source.fixAll.ruff": "explicit"
    }
  },
  "ruff.lint.enable": true,
  "ruff.organizeImports": true,
  "[yaml]": {
    "editor.wordWrap": "on"
  },
  "yaml.validate": true,
  "yaml.format.enable": true,
  "yaml.schemas": {
    "schemas/defaults.schema.json": "config/defaults.yaml",
    "schemas/backend.schema.json": "config/backend/*.yaml",
    "schemas/frontend.schema.json": "config/frontend/*.yaml",
    "schemas/flows.schema.json": "config/flows/*.yaml",
    "schemas/agent.schema.json": "config/flows/*.yaml",
    "https://json.schemastore.org/kustomization.json": "k8s/**/kustomization.yaml",
    "kubernetes": "k8s/**/*.{yaml,yml}"
  },
  "rest-client.environmentVariables": {
    "$shared": {
      "baseUrl": "http://localhost:8000",
      "nimBaseUrl": "http://localhost:8080"
    }
  },
  "rest-client.requestNameAsFileName": true,
  "sqltools.connections": [
    {
      "name": "PostgreSQL-local",
      "driver": "PostgreSQL",
      "previewLimit": 50,
      "server": "localhost",
      "port": 5432,
      "database": "agents",
      "username": "postgres",
      "password": "postgres"
    }
  ],
  "sqltools.useNodeRuntime": true,
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.cwd": "${workspaceFolder}",
  "terminal.integrated.scrollback": 8000,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "gitlens.hovers.currentLine.enabled": true,
  "gitlens.currentLine.enabled": true,
  "workbench.statusBar.visible": true,
  "workbench.activityBar.visible": true,
  "window.zoomLevel": 0,
  "security.workspace.trust.untrustedFiles": "open",
  "editor.largeFileOptimizations": true,
  "files.watcherExclude": {
    "**/.git/**": true,
    "**/node_modules/**": true,
    "**/.venv/**": true,
    "**/__pycache__/**": true,
    "**/.next/**": true,
    "**/.turbo/**": true,
    "**/dist/**": true,
    "**/build/**": true
  },
  "files.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/dist": true,
    "**/build": true,
    "**/.venv": true,
    "**/venv": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "**/dist": true,
    "**/build": true,
    "**/.venv": true,
    "**/venv": true,
    "**/coverage": true,
    "**/.pytest_cache": true
  },
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll": true
  }
}
